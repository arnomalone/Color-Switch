<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="400.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.C_play_options">
    <children>
        <ImageView fitHeight="608.0" fitWidth="401.0" layoutX="-1.0" layoutY="-2.0" pickOnBounds="true">
            <image>
                <Image url="@resources/background.png" />
            </image>
        </ImageView>
        <Button fx:id="mainMenuButton" ellipsisString="" layoutX="95.0" layoutY="424.0" mnemonicParsing="false" onAction="#press_back" prefHeight="71.0" prefWidth="231.0" style="-fx-background-color: transparent; -fx-alignment: center;">
            <graphic>
                <ImageView accessibleRole="BUTTON" fitHeight="61.0" fitWidth="132.0" pickOnBounds="true">
                    <image>
                        <Image url="@resources/back_text.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="newGame" layoutX="100.0" layoutY="219.0" mnemonicParsing="false" onAction="#press_new_game" prefHeight="71.0" prefWidth="210.0" style="-fx-background-color: transparent;" text="Resume">
            <graphic>
                <ImageView accessibleRole="BUTTON" fitHeight="61.0" fitWidth="194.0" pickOnBounds="true">
                    <image>
                        <Image url="@resources/new_game_text.png" />
                    </image>
                </ImageView>
            </graphic></Button>
        <Button fx:id="loadGameButton" layoutX="99.0" layoutY="323.0" mnemonicParsing="false" onAction="#press_load_game" prefHeight="71.0" prefWidth="210.0" style="-fx-background-color: transparent;" text="Restart">
            <graphic>
                <ImageView accessibleRole="BUTTON" fitHeight="61.0" fitWidth="195.0" pickOnBounds="true">
                    <image>
                        <Image url="@resources/load_game_text.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </children>
</AnchorPane>
